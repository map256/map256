{% extends "base.tmpl" %}

{% block extraheaditems %}
<meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript" src="/map256.js"></script>
<script type="text/javascript">
	var frontpage_userlist = json_parse('{{ frontpage_userlist }}')
</script>
<style type="text/css">
  html { height: 100% }
  body { height: 100%; margin: 0px; padding: 0px; width: 100% }
</style>
{% endblock %}

{% block content %}
	<body style="margin:0px; padding:0px;" onload="initialize_front()">
		<div id="map_canvas" style="width: 100%; height: 100%;"></div>
		<div id="container" style = "position:absolute; bottom:35px; left:50px; width:375px; padding:10px; background-color:#FFFFFF">
			<span style = "font-size:16pt;"><a href="/">Map256</a></span>
{% if logged_in %}
			<span style = "font-size:9pt;">(<a href="/faq">FAQ</a>, <a href="/profile">profile</a>, <a href="{{ signout_url }}">sign out</a>)</span>
{% else %}
			<span style = "font-size:9pt;">(<a href="/faq">FAQ</a>)</span>
{% endif %}
{% if not logged_in %}
			<hr>
			<p>Want to get started plotting your own travels?  Sign in to <a href="/profile">Map256</a> (Google Account login required).</p>
{% endif %}
{% endblock %}