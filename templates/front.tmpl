{% extends "base.tmpl" %}

{% block extraheaditems %}
<meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript" src="/map256.js"></script>
<script type="text/javascript">
	var frontpage_userlist = json_parse('{{ frontpage_userlist }}');
	window.onload = initialize_front;
</script>
<style type="text/css">
  html { height: 100% }
  body { height: 100%; margin: 0px; padding: 0px; width: 100% }
</style>
{% endblock %}

{% block content %}
		<div id="map_canvas"></div>
		<div id="container">
			<h1 id="front_title">
			    <a href="/">Map256</a>
{% if logged_in %}
			    <span id="front_submenu">(<a href="/faq">FAQ</a>, <a href="/profile">profile</a>, <a href="{{ signout_url }}">sign out</a>)</span>
{% else %}
			    <span id="front_submenu">(<a href="/faq">FAQ</a>)</span>
{% endif %}
{% if not logged_in %}
            </h1>
			<hr>
			<p><a href="/profile">Sign in</a> to get started plotting your own travels! (Google Account login required).</p>
{% endif %}
{% endblock %}