<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
		<title>map256: View User</title>
		<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
	    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
	    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js"></script>
	    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
	    <style type="text/css">
	      #slider { margin: 10px; }
	    </style>
		<script type="text/javascript">
		$.getJSON('/data/{{ account_key }}', function(data) { checkin_data = data; aftershock(); })
		</script>
		<script type="text/javascript" src="/map256.js"></script>
	</head>
	<body style="margin:0px; padding:0px;" onload="initialize()">
		<div id="map_canvas" style="width: 100%; height: 100%;"></div>
		<div id="container" style = "position:absolute; bottom:35px; left:50px; width:375px; padding:10px; background-color:#FFFFFF">
			<span style = "font-size:16pt;"><a href="/">Map256</a></span>
{% if logged_in %}
			<span style = "font-size:9pt;">(<a href="/faq.html">FAQ</a>, <a href="/profile">profile</a>, <a href="{{ signout_url }}">sign out</a>)</span>
{% else %}
			<span style = "font-size:9pt;">(<a href="/faq.html">FAQ</a>)</span>
{% endif %}
			<hr>
			<input type="button" onclick="toggle_markers()" value="Toggle markers">
			<input type="button" onclick="toggle_gradient()" value="Toggle recent-ness gradient">
			<hr>
			<span style = "font-size:9pt;">Oldest <input type="button" id="g_e" onclick="goto_earliest()" value="<<">
			<input type="button" id="g_p" onclick="goto_previous()" value="<">
			<input type="button" id="g_n" onclick="goto_next()" value=">">
			<input type="button" id="g_l" onclick="goto_latest()" value=">>"> Newest</span>
			<hr>
			<span style = "font-size:9pt;">History:</span>
			<div id="slider"></div>
{% if not logged_in %}
			<hr>
			<p>Want to get started plotting your own travels?  Sign in to <a href="/profile">Map256</a> (Google Account login required).</p>
{% endif %}
		</div>
		<script type="text/javascript">
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-1636496-2']);
			_gaq.push(['_trackPageview']);

			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();
		</script>
	</body>
</html>
